{
  "extends": "@featul/tsconfig/base.json",
  "compilerOptions": {
    "composite": false,
    "incremental": true,
    "declaration": false,
    "declarationMap": false,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "types": [
      "node"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}